# E-Commerce Cart System Environment Variables
NODE_ENV=development
PORT=3000

# Database (Optional - using in-memory storage for now)
# MONGODB_URI=mongodb://localhost:27017/ecommerce_cart
# DB_NAME=ecommerce_cart

# JWT Secret (for future authentication)
JWT_SECRET=your_super_secret_jwt_key_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (for future order notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_password

# Payment Gateway (for future integration)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key